---
// src/components/Projects.astro
const projects = [
    {
        title: "Real Time Chat App",
        description: "Full-stack mobile application built with React Native, Expo Go, and Firebase. App specializes in reducing digital noise by categorizing conversations into 'pillars'. ",
        tags: ["React Native", "Expo Go", "Firebase", "Web Sockets"],
        type: "web",
        github: "https://github.com/ygodevelopers/ygo-react",
        demo: "http://reactnativeexpo.s3-website.us-east-2.amazonaws.com/signIn",
        client: "https://www.ygoapp.com/"
    },
    {
        title: "MLB AI Strategy",
        description: "Real-time MLB analytics platform that uses AI to predict team strategies and decision making during live games. The app also provides the day's game schedule and scores.",
        tags: ["Gemini", "AI", "Sports", "Analysis"],
        type: "web",
        github: "https://github.com/JohnAngusG/mlb-beginner",
    },
    {
        title: "Farm-Sim Game",
        description: "Farming simulator vertical slice inspired by games like Harvest Moon and Stardew Valley. I challenged myself to design and implement my own inventory and action system.",
        tags: ["C#", "Unity", "Pixel Art", "2D"],
        type: "game",
        github: "https://github.com/JohnAngusG/Meowdener",
        demo: "https://johnmullaney.tech/CatsWeb"
    },
        {
        title: "Tetris",
        description: "Rebuilt the game Tetris using my own game engine written in C++ and SFML. Players are able to keep track of their scores and see piece previews.",
        tags: ["C++", "Game Engine", "SFML", "2D"],
        type: "game",
        github: "https://github.com/JohnAngusG/Tetris",
    }
];
---

<section id="projects" class="py-20 px-4">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-light text-neutral-900 mb-4">Selected Projects</h2>
            <p class="text-neutral-600 max-w-2xl mx-auto">
                A collection of web applications and games that showcase my technical skills and creative vision.
            </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
        {projects.map((project) => (
            <div class="bg-white rounded-lg border border-neutral-200 p-6 hover:shadow-lg transition-shadow duration-300">
            <div class="flex items-start justify-between mb-4">
                <h3 class="text-xl font-medium text-neutral-900">{project.title}</h3>
                <span class={`px-2 py-1 text-xs rounded-full ${
                project.type === 'game' 
                    ? 'bg-purple-100 text-purple-700' 
                    : 'bg-blue-100 text-blue-700'
                }`}>
                {project.type === 'game' ? 'Game' : 'Web App'}
                </span>
            </div>
            
            <p class="text-neutral-600 mb-4 leading-relaxed">
                {project.description}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-6">
                {project.tags.map((tag) => (
                <span class="px-3 py-1 bg-neutral-100 text-neutral-700 text-sm rounded-full">
                    {tag}
                </span>
                ))}
            </div>
            
            <div class="flex gap-3">
                <a 
                href={project.github}
                class="text-neutral-700 hover:text-neutral-900 font-medium text-sm flex items-center gap-1 transition-colors"
                target="_blank"
                rel="noopener noreferrer"
                >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                Code
                </a>
                {
                    project.demo && 
                        <a 
                            href={project.demo}
                            class="text-neutral-700 hover:text-neutral-900 font-medium text-sm flex items-center gap-1 transition-colors"
                            target="_blank"
                            rel="noopener noreferrer"
                            >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                            </svg>
                            Demo
                        </a>
                }
                {
                    project.client && 
                        <a 
                            href={project.client}
                            class="text-neutral-700 hover:text-neutral-900 font-medium text-sm flex items-center gap-1 transition-colors"
                            target="_blank"
                            rel="noopener noreferrer"
                            >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                            </svg>
                            Client
                        </a>
                }
                
            </div>
            </div>
        ))}
        </div>
    </div>
</section>